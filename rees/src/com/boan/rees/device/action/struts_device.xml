<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">	
<struts>
    <package name="device" extends="struts-default" namespace="/">
    	<action name="openDeviceAction" class="deviceInfoAction" method="openDevice">
    		<result name="success">/device/devicelist.jsp</result>
    		<result name="input">/device/devicelist.jsp</result>
    	</action>
    	<action name="openAddDeviceAction" class="deviceInfoAction" method="openAddDevice ">
    		<result name="success">/device/deviceadd.jsp</result>
    		<result name="input">/device/deviceadd.jsp</result>
    	</action>
    	 <action name="toAddDeviceAction" class="deviceInfoAction" method="toAddDevice">
             <result name="success">/device/deviceadd.jsp</result>
            <result name="input">/device/deviceadd.jsp</result>
        </action>
    </package>
    <package name="pointinfo" extends="struts-default" namespace="/datamanage">
    	<action name="pointlist" class="pointInfoAction" method="pointInfoListByDeviceId">
    		<result name="success">/datamanage/pointset.jsp</result>
    		<result name="input">/datamanage/pointset.jsp</result>
    	</action>
    	<action name="positionset" class="com.boan.rees.device.action.PointInfoAction" method="positionSet">
            <result name="success">/datamanage/pointset.jsp</result>
        </action>
    </package>
    <package name="deviceAjax" extends="json-default" namespace="/datamanage">
		<action name="positionsetajax" class="com.boan.rees.device.action.PointInfoAction" method="positionSet">
            <result type="json"></result>
        </action>
        <action name="deletepointajax" class="com.boan.rees.device.action.PointInfoAction" method="deletePoint">
            <result type="json"></result>
        </action>
	</package>
</struts>