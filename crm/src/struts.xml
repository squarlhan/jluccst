<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">  	
<struts>
	<constant name="struts.ui.theme" value="simple"/>
	<!-- 开启使用开发模式，详细错误提示 -->
	<constant name="struts.devMode" value="true" />
	<!-- 将对象交给spring管理 -->
	<constant name="struts.objectFactory" value="spring" />
	<!-- 指定资源编码类型 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 指定每次请求到达，重新加载资源文件 -->
	<constant name="struts.i18n.reload" value="true" />
	<!-- 指定每次配置文件更改后，自动重新加载 -->
	<constant name="struts.configuration.xml.reload" value="true" />
	<!-- 上传文件时的临时目录-->
	<constant name="struts.multipart.saveDir" value="c:/temp"/>
	<!-- 上传组件最大上传文件大小 1G-->
	<constant name="struts.multipart.maxSize" value="1073741824" /> 
	
	<!-- 国际化资源文件 -->
	<!-- <constant name="struts.custom.i18n.resources" value="message" /-->
	<!-- 浏览器缓存 -->
	<constant name="struts.serve.static.browserCache" value="false" />
	
	<!-- 默认后缀名 -->
	<!-- constant name="struts.action.extension" value="action" /-->
	
	<include file="struts_ui.xml"></include>
	<!-- 数据字典 -->
	<include file="com/boan/crm/datadictionary/action/struts_datadictionary.xml"></include>
	<!-- 服务管理 -->
	<include file="com/boan/crm/servicemanage/action/struts_service.xml"></include>
	<!-- 组织机构 -->
	<include file="com/boan/crm/groupmanage/action/struts_group.xml"></include>
	<!-- 后台管理 -->
	<include file="com/boan/crm/backstagemanage/action/struts_backstage.xml"></include>
	<!-- 客户管理 -->
	<include file="com/boan/crm/customer/action/struts_customer.xml"></include>
	<!-- 客户模糊分析 -->
	<include file="com/boan/crm/customer/analysis/action/struts_fuzzy.xml"></include>
	<!-- 客户评估 -->
	<include file="com/boan/crm/customerassessment/action/struts_customerassessment.xml"></include>
	<!-- 短信管理 -->
	<include file="com/boan/crm/sms/action/struts_sms.xml"></include>
	<!-- 时间管理 -->
	<include file="com/boan/crm/timemanage/action/struts_time_plan.xml"></include>
	<!-- 市场调查 -->
	<include file="com/boan/crm/marketinquiry/action/struts_market_inquiry.xml"></include>
	<!-- 销售记录 -->
	<include file="com/boan/crm/sellrecord/action/struts_sell_record.xml"></include>
    <!-- 客户查找 -->
	<include file="com/boan/crm/customersearch/action/struts_customer_search.xml"></include>
	<!-- 供应商 -->
	<include file="com/boan/crm/supplier/action/struts_supplier.xml"></include>
	<!-- 采购管理 -->
	<include file="com/boan/crm/purchase/action/struts_purchase.xml"></include>
	<!-- 财务清单-->
	<include file="com/boan/crm/finance/action/struts_finance.xml"></include>
</struts>