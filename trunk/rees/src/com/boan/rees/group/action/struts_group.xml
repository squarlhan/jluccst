    	      <result name="input">/systemmanage/workshopinfo.jsp</result>
    	</action>
    	<!-- 用于添加一个车间信息 -->
    	<action name="toAddWorkshopAction" class="workshopAction" method="toAddWorkshop">
    	     <result name="success">/systemmanage/workshopinfo.jsp</result>
