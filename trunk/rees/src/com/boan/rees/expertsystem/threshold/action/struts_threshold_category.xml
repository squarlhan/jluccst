<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">	
<struts>
	<!-- 阈值类别管理 -->
     <package name="threshold_category" extends="struts-default" namespace="/">
    	
    	<!-- 打开阈值类别列表 -->
    	<action name="openThresholdCategoryAction" class="thresholdCategoryAction" method="openThresholdCategory">
    		<result name="success">/expertsystem/threshold/thresholdcategorylist.jsp</result>
    		<result name="input">/expertsystem/threshold/thresholdcategorylist.jsp</result>
    	</action>
    	<!-- 打开添加阈值类别页面 -->
    	<action name="openAddThresholdCategoryAction" class="thresholdCategoryAction" method="openAddThresholdCategory">
    		<result name="success">/expertsystem/threshold/thresholdcategoryinfo.jsp</result>
    		<result name="input">/expertsystem/threshold/thresholdcategoryinfo.jsp</result>
    	</action>
    	
    	<!-- 添加阈值类别 -->
    	 <action name="toAddThresholdCategoryAction" class="thresholdCategoryAction" method="toAddThresholdCategory">
            <result name="success">/expertsystem/threshold/thresholdcategoryinfo.jsp</result>
    		<result name="input">/expertsystem/threshold/thresholdcategoryinfo.jsp</result>
        </action>
        
        <!-- 删除阈值类别 -->
        <action name="deleteThresholdCategoryAction" class="thresholdCategoryAction" method="deleteThresholdCategory"/>
        
        <!-- 打开修改阈值类别页面 -->
    	<action name="openModifyThresholdCategoryAction" class="thresholdCategoryAction" method="openModifyThresholdCategory">
    		<result name="success">/expertsystem/threshold/thresholdcategoryinfo.jsp</result>
    		<result name="input">/expertsystem/threshold/thresholdcategoryinfo.jsp</result>
    	</action>
    	
        <!-- 修改阈值类别 -->
    	<action name="toModifyThresholdCategoryAction" class="thresholdCategoryAction" method="toModifyThresholdCategory">
    		<result name="success">/expertsystem/threshold/thresholdcategoryinfo.jsp</result>
    		<result name="input">/expertsystem/threshold/thresholdcategoryinfo.jsp</result>
    	</action>
      </package>	    
</struts>