<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">	
<struts>
	<!-- 建议分类管理 -->
     <package name="special_device_rule" extends="struts-default" namespace="/">
    	
    	<!-- 打开建议类型列表 -->
    	<action name="openDeviceRuleListAction" class="specialDeviceRuleAction" method="openDeviceRuleList">
    		<result name="success">/expertsystem/devicerule/special_device_rule_list.jsp</result>
    		<result name="input">/expertsystem/devicerule/special_device_rule_list.jsp</result>
    	</action>
    	<action name="openAddSpecialDeviceRuleAction" class="specialDeviceRuleAction" method="openAddDeviceRuleInfo">
    		<result name="success">/expertsystem/devicerule/special_device_rule_info.jsp</result>
    		<result name="input">/expertsystem/devicerule/special_device_rule_info.jsp</result>
    	</action>
    	
    	<!-- 添加规则类型 -->
    	<action name="toAddDeviceRuleInfoAction"  class="specialDeviceRuleAction" method="toAddDeviceRuleInfo">
    		<result name="success">/expertsystem/devicerule/special_device_rule_info.jsp</result>
    		<result name="input">/expertsystem/devicerule/special_device_rule_info.jsp</result>
    	</action>
      
    	<!-- 打开修改规则类型列表 -->
    	<action name="openModifyDeviceRuleInfoAction" class="specialDeviceRuleAction" method="openModifyDeviceRuleInfo">
    		<result name="success">/expertsystem/devicerule/special_device_rule_info.jsp</result>
    		<result name="input">/expertsystem/devicerule/special_device_rule_info.jsp</result>
    	</action>
    	<!-- 修改规则类型列表 -->
    	<action name="toModifyDeviceRuleInfoAction" class="specialDeviceRuleAction" method="toModifyDeviceRuleInfo">
    		<result name="success">/expertsystem/devicerule/special_device_rule_info.jsp</result>
    		<result name="input">/expertsystem/devicerule/special_device_rule_info.jsp</result>
    	</action>
    	<action name="deleteDeviceRuleInfoAction" class="specialDeviceRuleAction" method="deleteDeviceRuleInfo">
    	</action>
    	<!-- 删除现象 -->
    	<action name="toDeleteResult4SpecialDeviceRuleAction" class="specialDeviceRuleAction" method="toDeleteResult4SpecialDeviceRule"/>
      </package>	    
</struts>