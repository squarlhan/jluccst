<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">	
<struts>
  <!-- 设备Action -->
    <package name="device" extends="struts-default" namespace="/">
         <!-- 打开设备列表 -->
        <action name="openDeviceAction" class="deviceInfoAction" method="openDevice">
    		<result name="success">/device/devicelist.jsp</result>
    		<result name="input">/device/devicelist.jsp</result>
    	</action>
    	<!-- 打开添加设备菜单 -->
    	<action name="openAddDeviceAction" class="deviceInfoAction" method="openAddDevice ">
    		<result name="success">/device/deviceinfo.jsp</result>
    		<result name="input">/device/deviceinfo.jsp</result>
    	</action>
    	<!-- 添加设备菜单 -->
    	<action name="toAddDeviceAction" class="deviceInfoAction" method="toAddDevice">
    	 	<!-- 配置fileUpload的拦截器 -->
            <interceptor-ref name="fileUpload">
		    	<!-- 配置允许上传的文件类型 -->
		        <param name="allowedTypes">image/gif,image/png,image/bmp,image/pjpeg,image/jpg,image/jpeg</param>
		    	<!-- 配置允许上传的文件大小 1MB = 1024KB = 1024*1024 = 1048576-->
				<param name="maximumSize">20971520</param> 
			</interceptor-ref> 
	        <interceptor-ref name="defaultStack"/>
	        <interceptor-ref name="fileUploadStack"/>
	   		<!-- 动态设置Action的属性值 -->
			<param name="savePath">/upload</param>
            <result name="success">/device/devicelist.jsp</result>
            <result name="input">/device/deviceinfo.jsp</result>
        </action>
        
        <!-- 文件下载，支持中文附件名 -->  
        <action name="toDownloadDeviceImage" class="deviceInfoAction" method="downloadDeviceImage">  
            <result name="success" type="stream">  
                <param name="contentType">image/jpeg</param>  
                <param name="inputName">inputStream</param>  
                <param name="contentDisposition">attachment;filename="${downloadFileName}"</param>  
                <param name="bufferSize">4096</param>  
            </result>  
        </action>  
        
        <!-- 删除设备 -->
        <action name="deleteDeviceAction" class="deviceInfoAction" method="deleteDevice"/>
        
        <!-- 打开修改设备菜单 -->
    	<action name="openModifyDeviceAction" class="deviceInfoAction" method="openModifyDevice">
    		<result name="success">/device/deviceinfo.jsp</result>
    		<result name="input">/device/deviceinfo.jsp</result>
    	</action>
    	
        <!-- 修改设备菜单 -->
    	<action name="toModifyDeviceAction" class="deviceInfoAction" method="toModifyDevice">
    		<result name="success">/device/deviceinfo.jsp</result>
    		<result name="input">/device/deviceinfo.jsp</result>
    	</action>
    	
    	<!-- 打开设备排序 -->
    	<action name="openSortDeviceAction" class="deviceInfoAction" method="openSortDevice">
    		<result name="success">/device/devicesort.jsp</result>
    		<result name="input">/device/devicesort.jsp</result>
    	</action>
    	
    	<!-- 设备排序 -->
    	<action name="toSortDeviceAction" class="deviceInfoAction" method="toSortDevice">
    		<result name="success">/device/devicesort.jsp</result>
    		<result name="input">/device/devicesort.jsp</result>
    	</action>
	</package>
	
	
    <!-- 监控点Action -->
	<package name="pointinfo" extends="struts-default" namespace="/datamanage">
		<action name="pointlist" class="pointInfoAction" method="pointInfoListByDeviceId">
			<result name="success">/datamanage/pointset.jsp</result>
			<result name="input">/datamanage/pointset.jsp</result>
		</action>
		<action name="positionset" class="com.boan.rees.device.action.PointInfoAction" method="positionSet">
	        <result name="success">/datamanage/pointset.jsp</result>
	    </action>
	</package>
	
	<!-- 监测点数据Action -->
	<package name="pointdatainfo" extends="struts-default" namespace="/datamanage">
		<action name="pointdatalist" class="pointDataInfoAction" method="pointDataInfoList">
			<result name="success">/datamanage/pointdatalist.jsp</result>
			<result name="input">/datamanage/pointdatalist.jsp</result>
		</action>
		<action name="pointdatainfo" class="pointDataInfoAction" method="pointDataInfo">
			<result name="success">/datamanage/pointdatainfo.jsp</result>
			<result name="input">/datamanage/pointdatainfo.jsp</result>
		</action>
		<action name="deviceimage" class="pointDataInfoAction" method="deviceImage">
			<result name="success">/datamanage/deviceimage.jsp</result>
			<result name="input">/datamanage/deviceimage.jsp</result>
		</action>
	</package>
	<package name="pointdatajax" extends="json-default" namespace="/datamanage">
		<action name="getweeksajax" class="pointDataInfoAction" method="loadWeekList">
            <result type="json"></result>
        </action>
        <action name="getdataajax" class="pointDataInfoAction" method="loadDataInfo">
            <result type="json"></result>
        </action>
        <action name="savedatainfoajax" class="pointDataInfoAction" method="saveDataInfo">
            <result type="json"></result>
        </action>
	</package>
	
    <package name="deviceAjax" extends="json-default" namespace="/datamanage">
		<action name="positionsetajax" class="com.boan.rees.device.action.PointInfoAction" method="positionSet">
            <result type="json"></result>
        </action>
        <action name="deletepointajax" class="com.boan.rees.device.action.PointInfoAction" method="deletePoint">
            <result type="json"></result>
        </action>
	</package>
	
</struts>