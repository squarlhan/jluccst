<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">	
<struts>
    <package name="user" extends="struts-default" namespace="/">
    	<action name="openDemoAction" class="demoAction" method="openDemo">
            <result name="success">/demo/list.jsp</result>
            <result name="input">/demo/list.jsp</result>
        </action>
    
    	<action name="openAddDemoAction" class="demoAction" method="openAddDemo">
            <result name="success">/demo/add.jsp</result>
            <result name="input">/demo/add.jsp</result>
        </action>
        
        <action name="toAddDemoAction" class="demoAction" method="toAddDemo">
             <result name="success">/demo/add.jsp</result>
            <result name="input">/demo/add.jsp</result>
        </action>
        
        <action name="openModifyDemoAction" class="demoAction" method="openModifyDemo">
            <result name="success">add.jsp</result>
            <result name="input">add.jsp</result>
        </action>
        
        <action name="deleteDemoAction" class="demoAction" method="deleteDemo">
           	<result name="success" type="chain">
             	<param name="actionName">openDemoAction</param>
             	<param name="namespace">/</param>
             	<param name="pageNo">${pageNo}</param>
            </result>
        </action>
    </package>
    <package name="user1" extends="struts-default" namespace="/">	
    <action name="openDemo1Action" class="demo1Action" method="openDemo1">
    <result name="success" >/demo/index1.jsp</result>
    </action>
    
    <action name="openAddDemo1Action" class="demo1Action" method="openAddDemo1">
    <result name="success" >/demo/info.jsp</result>
    </action>
    
    <action name="toAddDemo1Action" class="demo1Action" method="toAddDemo1">
    <result name="success" >/demo/info.jsp</result>
    <result name="input" >/demo/error.jsp</result>
    </action>
    </package>
</struts>